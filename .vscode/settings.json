{
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/__pycache__": true,
    "**/.ruff_cache": true,
    "**/node_modules": true
  },
  "editor.formatOnSave": true,
  "editor.unicodeHighlight.allowedLocales": {
    "fr": true
  },
  "workbench.editor.labelFormat": "short",
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#000091",
    "titleBar.activeForeground": "#ffffff"
  },
  "spellright.language": [
    "fr_FR (modern)"
  ],
  "spellright.documentTypes": [
    "latex",
    "plaintext",
    "markdown"
  ],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wrappingIndent": "indent",
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wrappingIndent": "indent",
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "css.lint.unknownAtRules": "ignore",
  "prettier.enable": true,
  "prettier.prettierPath": "",
  "prettier.configPath": "./frontend/.prettierrc",
  // python
  "python.languageServer": "Pylance", // used for import suggestions only
  "python.analysis.ignore": [
    "*"
  ], // disable linting as it would be redundant with Ruff 
  "python.envFile": "${workspaceFolder}/.env",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.importFormat": "relative",
  "python.analysis.indexing": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.packageIndexDepths": [
    {
      "name": "django",
      "depth": 10,
      "includeAllSymbols": true
    },
    {
      "name": "rest_framework",
      "depth": 10,
      "includeAllSymbols": true
    }
  ],
  "python.analysis.extraPaths": [], // use if auto-import seems off with some folders
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  }
}
