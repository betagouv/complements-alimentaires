    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django Server",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Django Shell",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "shell_plus"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Tests",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--noinput",
                "--keepdb"
            ],
            "justMyCode": false,
            "django": true
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}
