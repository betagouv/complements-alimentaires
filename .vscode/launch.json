{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "redirectOutput": true,
            "django": true,
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Python: Tests",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": false,
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--noinput"
            ],
            "justMyCode": false,
            "django": true
        },
        {
            "name":"Python: Current File",
            "type":"debugpy",
            "request":"launch",
            "program":"${file}",
            "console":"integratedTerminal",
            "justMyCode":true
        },
    ]
}
